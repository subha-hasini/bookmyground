<h1>Signup for a new user</h1>

<%= form_tag :action => 'create' %>
<p><label for="name">User Name</label>:
<%= text_field 'user','name' %></p>

<p><label for="email">User Email</label>:
<%= text_field 'user','email' %></p>

<p><label for="password">Password</label>:
<%= password_field 'user','password' %></p>

<p><label for="password">Confirm Password</label>:
<%= password_field 'user','password_confirmation' %></p>

<%= submit_tag "Create"%>

